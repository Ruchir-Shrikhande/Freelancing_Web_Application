<h1>{{employee.userName}}</h1>
<div class="container">
  <h2>Employee Details</h2>
  <div class="card job-listing">
    <ul class="list-group list-group-flush">

      <li class="list-group-item">
        <p>Email: {{user.email}}</p>
      </li>

      <li class="list-group-item">
        <p>Employee Preferences: {{employee.preferences}}</p>
      </li>
      {{!-- <li class="list-group-item">
          <p>Employee Preferences: {{employee.preferences}}</p>
        </li> --}}

      <li class="list-group-item">
        <p>Employee Rating: {{employee.overallRating}}</p>
      </li>
      {{!-- <li class="list-group-item">
          <p>Employee Rating: {{employee.overallRating}}</p>
        </li> --}}

      <li class="list-group-item">
        <p>Resume</p>
        <embed src="/public/images/resumes/{{employee.resume}}" width="500" height="700" />
      </li>
    </ul>
  </div>

  <h2>Job History</h2>
  <div class="card employer-listing">
    <ul class="list-group list-group-flush job-history-list">
      {{#each historyOfJobs}}
        <li class="list-group-item">
          <div><p><a href="/post/{{this._id}}">{{this.title}}</a></p></div>
        </li>
      {{/each}}
    </ul>
  </div>

</div>
<div class="employee-btn-div">
  <button
    class="employeeprofile-button"
    type="button"
    id="backtouser"
    onclick="location.href='/user/{{user.userName}}'"
  >To this user</button>
</div>