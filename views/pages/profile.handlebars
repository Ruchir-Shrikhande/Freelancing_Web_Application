<div class="container user-profile-area">
  {{#if user}}
    {{!-- <div class="user-class">
      <button type="button" onclick="location.href='/profile/{{user.userName}}/addPost'">Create Post</button>
      <button type="button" onclick="location.href='/profile/{{user.userName}}/edit'">Edit Profile</button>
    </div> --}}
  <ul class="list-group list-group-flush profile-data-list">
    <li class="list-group-item">
      <h1>{{user.userName}}</h1>
      <div>Name: {{user.firstName}} {{user.lastName}}</div>
      <div>Contact Number: {{user.contactNumber}}</div>
      <div class="label">Email: {{user.email}}</div>
    </li>
    
    <li class="list-group-item">
      <h2>Jobs Completed</h2>
      <div class="card job-posted-list">
        <ul class="list-group list-group-flush">
            {{#each historyOfJobs}}
              <li class="list-group-item">
                <div><p><a href="/post/{{this._id}}">{{this.title}}</a></p></div>
              </li>
            {{/each}}
         
        </ul>
      </div>
    </li>

    <li class="list-group-item">
      <h2>Jobs Taken</h2>
      <div class="card job-posted-list">
        <ul class="list-group list-group-flush">
          {{#each currentJobs}}
            <li class="list-group-item">
              <div><p><a href="/post/{{this._id}}">{{this.title}}</a></p></div>
            </li>
          {{/each}}
         
        </ul>
      </div>
    </li>

    <li class="list-group-item">
      <h2>Invites</h2>
      <div class="card job-posted-list">
        <ul class="list-group list-group-flush">
          {{#each invites}}
            <li class="list-group-item">
              <div><p><a href="/post/{{this._id}}">{{this.title}}</a>
              <button class= "profile-invite-btn" type="button" id = "acceptinvite" onclick="location.href='/post/{{this._id}}/acceptinvite'">Accept Invite</button></p></div>
            </li>
          {{/each}}
        
        </ul>
      </div>
    </li>
    
    <li class="list-group-item">
      <h2>Saved Jobs</h2>
      <div class="card job-posted-list">
        <ul class="list-group list-group-flush">
          {{#each wishList}}
            <li class="list-group-item">
              <div><p><a href="/post/{{this._id}}">{{this.title}}</a></p></div>
            </li>
          {{/each}}
      
        </ul>
      </div>
    </li>

    <li class="list-group-item">
      <h2>Jobs posted</h2>
      <div class="card job-posted-list">
        <ul class="list-group list-group-flush">
              {{#each posts}}
                <li class="list-group-item">
                  <div><p><a href="/post/{{this._id}}">{{this.title}}</a></p></div>
                </li>
              {{/each}}

       
           
        </ul>
</div>
</ul>
</div>

    
  {{!-- <a href="/home">Home</a> --}}
  {{/if}}

  {{#if error}}<div id="viewpost-error" class="error">{{error}}</div>{{/if}}
